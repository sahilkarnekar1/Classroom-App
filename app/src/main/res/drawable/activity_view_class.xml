<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ViewClassActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="8dp"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textClassNameViewClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BEIT"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textSectionSubjectRoomViewTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deep Learning"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/goToAddAnnouncement"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/baseline_person_24" />

        <TextView
            android:id="@+id/textViewAnnouncement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="Share With Your Class...." />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/viewClassRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>