<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="@drawable/border"
    android:padding="8dp">

    <TextView
        android:id="@+id/textViewTitleAss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
         />

    <TextView
        android:id="@+id/textViewDescriptionAss"
        android:layout_width="match_parent"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
         />

    <TextView
        android:id="@+id/textViewFileNameAss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />

    <ImageView
        android:id="@+id/buttonDownloadAss"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/ic_download"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="35dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/baseline_attachment_24" />

        <TextView
            android:id="@+id/selectAttachmentAssignmentItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="Add Your Work ..."
            android:textSize="20sp" />
        <ImageView
            android:id="@+id/viewSubmitedAssignmentsIV"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/eye_view" />

    </LinearLayout>


</LinearLayout>