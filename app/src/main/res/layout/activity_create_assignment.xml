<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateAssignmentActivity">


    <EditText
        android:id="@+id/editTextTitleAttachment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        android:hint="Title"
       />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/baseline_subject_textarea" />

        <EditText
            android:id="@+id/editTextDescAttachment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Description"
            android:inputType="textMultiLine"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/baseline_attachment_24" />

        <TextView
            android:id="@+id/Assignment_attachment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           android:gravity="center_vertical"
            android:textSize="20sp"
            android:text="Attachment" />
    </LinearLayout>

    <Button
        android:id="@+id/post_Assignment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Post Assignment" />

</LinearLayout>